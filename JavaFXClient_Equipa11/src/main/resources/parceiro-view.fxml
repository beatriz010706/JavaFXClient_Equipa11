<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0"
      spacing="10"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.javafxclient_equipa11.controllers.ParceirosController">

   <children>
      <Label text="Menu Parceiro"/>

      <TextField fx:id="txtParceiroId" promptText="ID Parceiro"/>
      <TextField fx:id="txtTitulo" promptText="Título do Programa"/>
      <TextField fx:id="txtHoras" promptText="Horas"/>
      <TextField fx:id="txtLocal" promptText="Local"/>
      <TextField fx:id="txtDescricao" promptText="Descrição"/>
      <TextField fx:id="txtVagas" promptText="Vagas"/>

      <Button text="Registar Programa"
              mnemonicParsing="false"
              onAction="#registarPrograma"/>

      <TextField fx:id="txtCandidaturaId" promptText="ID Candidatura"/>

      <Button text="Aprovar Candidatura"
              mnemonicParsing="false"
              onAction="#aprovarCandidatura"/>

      <Button text="Rejeitar Candidatura"
              mnemonicParsing="false"
              onAction="#rejeitarCandidatura"/>
   </children>
</VBox>
