<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFXClient_Equipa11.controller.CandidaturaController"
      spacing="10" style="-fx-padding:10;">
    <Label text="Candidaturas" style="-fx-font-size:16;-fx-font-weight:bold;"/>

    <TableView fx:id="candidaturasTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
            <TableColumn fx:id="estudanteCol" text="Estudante" prefWidth="200"/>
            <TableColumn fx:id="programaCol" text="Programa" prefWidth="200"/>
            <TableColumn fx:id="estadoCol" text="Estado" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Refresh" onAction="#listar"/>
        <Button text="Atualizar Estado" onAction="#atualizarEstado"/>
    </HBox>
</VBox>
