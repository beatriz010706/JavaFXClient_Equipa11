<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFXClient_Equipa11.controller.EstudanteController"
      spacing="10"
      style="-fx-padding:10;">

    <Label text="Gestão de Estudantes"
           style="-fx-font-size:16;-fx-font-weight:bold;"/>

    <HBox spacing="10">
        <Label text="Estudante ID:"/>
        <TextField fx:id="txtEstudanteId" promptText="ID do Estudante"/>
        <Label text="Programa ID:"/>
        <TextField fx:id="txtProgramaId" promptText="ID do Programa"/>
    </HBox>

    <TableView fx:id="historicoTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="80"/>
            <TableColumn fx:id="nomeCol" text="Nome" prefWidth="200"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
            <TableColumn fx:id="cursoCol" text="Curso" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Consultar Histórico" onAction="#consultarHistorico"/>
        <Button text="Candidatar" onAction="#candidatar"/>
    </HBox>

</VBox>





