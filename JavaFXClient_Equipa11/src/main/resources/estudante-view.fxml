<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFXClient_Equipa11.controller.EstudanteController"
      spacing="15"
      style="-fx-padding:20; -fx-background-color:#f9f9f9;">

    <Label text="Área do Estudante" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <!-- Seção: Identificação do estudante -->
    <VBox spacing="8" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding:10;">
        <Label text="Identificação"/>
        <HBox spacing="10">
            <Label text="ID do Estudante:" minWidth="120"/>
            <TextField fx:id="txtEstudanteId" promptText="Ex: 1" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>

    <!-- Seção: Candidatura a programas -->
    <VBox spacing="8" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding:10;">
        <Label text="Candidatura a Programa"/>
        <HBox spacing="10">
            <Label text="ID do Programa:" minWidth="120"/>
            <TextField fx:id="txtProgramaId" promptText="Ex: 10" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox spacing="10">
            <Button text="Candidatar" onAction="#candidatar"/>
        </HBox>
    </VBox>

    <!-- Seção: Histórico e estado -->
    <VBox spacing="8" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding:10;">
        <Label text="Histórico e Estado"/>
        <HBox spacing="10">
            <Button text="Consultar Histórico" onAction="#consultarHistorico"/>
            <Button text="Ver Estado" onAction="#verEstado"/>
        </HBox>
    </VBox>

</VBox>
