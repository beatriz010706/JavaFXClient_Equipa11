<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFXClient_Equipa11.controller.EstudanteController"
      spacing="10"
      style="-fx-padding:10;">

    <Label text="Área do Estudante"
           style="-fx-font-size:16;-fx-font-weight:bold;"/>

    <HBox spacing="10">
        <Label text="ID do Estudante:"/>
        <TextField fx:id="txtEstudanteId" promptText="Ex: 1"/>
    </HBox>

    <HBox spacing="10">
        <Label text="ID do Programa:"/>
        <TextField fx:id="txtProgramaId" promptText="Ex: 10"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Consultar Histórico"
                onAction="#consultarHistorico"/>
        <Button text="Candidatar"
                onAction="#candidatar"/>
    </HBox>

</VBox>
