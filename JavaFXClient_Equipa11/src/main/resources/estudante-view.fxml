      spacing="10" style="-fx-padding: 10;">
    <HBox spacing="10">
        <Label text="Estudantes" style="-fx-font-size:16;-fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#onRefresh"/>
        <Button text="Adicionar" onAction="#onAddEstudante"/>
        <Button text="Editar" onAction="#onEditEstudante"/>
        <Button text="Remover" onAction="#onDeleteEstudante"/>
    </HBox>

    <TableView fx:id="estudantesTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
            <TableColumn fx:id="nomeCol" text="Nome" prefWidth="150"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
            <TableColumn fx:id="cursoCol" text="Curso" prefWidth="100"/>
