<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFXClient_Equipa11.controller.ProgEstudanteController"
      spacing="10"
      style="-fx-padding:10;">

    <Label text="Programa do Estudante"
           style="-fx-font-size:16;-fx-font-weight:bold;"/>

    <HBox spacing="10">
        <Label text="ProgramaEstudante ID:"/>
        <TextField fx:id="txtProgramaEstudanteId" promptText="Ex: 5"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Horas:"/>
        <TextField fx:id="txtHoras" promptText="Ex: 10"/>
    </HBox>

    <VBox spacing="8">
        <Button text="Adicionar Horas" onAction="#adicionarHoras"/>
        <Button text="Consultar Progresso" onAction="#getProgresso"/>
        <Button text="Concluir Programa" onAction="#concluirPrograma"/>
        <Button text="Emitir Diploma" onAction="#emitirDiploma"/>
        <Button text="Cancelar Participação" onAction="#cancelarParticipacao"/>
    </VBox>

</VBox>
