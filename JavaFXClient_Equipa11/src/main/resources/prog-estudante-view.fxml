<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding:10;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lp.JavaFXClient_Equipa11.controller.ProgEstudanteController">
    <Label style="-fx-font-size:16;-fx-font-weight:bold;" text="Programa do Estudante" />

    <HBox spacing="10">
        <Label text="ProgramaEstudante ID:" />
        <TextField fx:id="txtProgramaEstudanteId" promptText="Ex: 5" />
    </HBox>

    <HBox spacing="10">
        <Label text="Horas:" />
        <TextField fx:id="txtHoras" promptText="Ex: 10" />
    </HBox>

    <HBox spacing="10" />

    <VBox spacing="8">
        <Button onAction="#adicionarHoras" text="Adicionar Horas" />
        <Button onAction="#getProgresso" text="Consultar Progresso" />
        <Button onAction="#concluirPrograma" text="Concluir Programa" />
        <Button onAction="#emitirDiploma" text="Emitir Diploma" />
        <Button onAction="#cancelarParticipacao" text="Cancelar Participação" />
    </VBox>
</VBox>
