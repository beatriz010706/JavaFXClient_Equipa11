<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0"
      spacing="10"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.javafxclient_equipa11.controllers.ProgramaEstudanteController">

   <children>
      <Label text="Programa do Estudante"/>

      <TextField fx:id="txtEstudanteId" promptText="ID Estudante"/>
      <TextField fx:id="txtProgramaId" promptText="ID Programa"/>

      <Button text="Adicionar Horas"
              mnemonicParsing="false"
              onAction="#adicionarHoras"/>

      <Button text="Consultar Progresso"
              mnemonicParsing="false"
              onAction="#consultarProgresso"/>

      <Button text="Emitir Diploma"
              mnemonicParsing="false"
              onAction="#emitirDiploma"/>

      <Button text="Cancelar Participação"
              mnemonicParsing="false"
              onAction="#cancelarParticipacao"/>
   </children>
</VBox>
