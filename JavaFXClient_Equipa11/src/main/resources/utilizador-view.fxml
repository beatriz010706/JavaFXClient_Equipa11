<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFXClient_Equipa11.controller.UtilizadorController"
      spacing="10" style="-fx-padding:10;">
    
    <Label text="Utilizador" style="-fx-font-size:16;-fx-font-weight:bold;"/>
    <ComboBox fx:id="tipoUtilizador"/>

    <!-- Campos básicos para todos os tipos -->
    <HBox spacing="10">
        <TextField fx:id="txtNome" promptText="Nome"/>
        <TextField fx:id="txtEmail" promptText="Email"/>
        <PasswordField fx:id="txtPassword" promptText="Password"/>
    </HBox>

    <!-- Campos específicos para estudante -->
    <HBox spacing="10">
        <TextField fx:id="txtCurso" promptText="Curso"/>
        <TextField fx:id="txtNumeroAluno" promptText="Número de Aluno"/>
    </HBox>

    <!-- Campos específicos para parceiro -->
    <HBox spacing="10">
        <ComboBox fx:id="tipoParceiro" promptText="Tipo de Parceiro"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Registar" onAction="#registar"/>
        <Button text="Login" onAction="#login"/>
    </HBox>
</VBox>
